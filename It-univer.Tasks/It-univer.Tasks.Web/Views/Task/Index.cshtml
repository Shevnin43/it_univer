@using ItUniver.Task.Entities

@model  ICollection<TaskBase>

<div class="card">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Subject</th>
                <th scope="col">Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>
                        @task.Subject
                    </td>
                    <td>
                        @task.Description
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Create","Task")" type="button" class="btn btn-primary"/>
</div>